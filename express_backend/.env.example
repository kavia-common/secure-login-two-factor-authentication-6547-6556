# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Auth
JWT_SECRET=change_this_secret
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=change_this_refresh_secret
REFRESH_TOKEN_EXPIRES_IN=7d

# 2FA
TWO_FA_CODE_TTL=300
TWO_FA_CODE_LENGTH=6
TWO_FA_MAX_REQUESTS_PER_HOUR=5
TWO_FA_MAX_VERIFY_ATTEMPTS_PER_HOUR=10
TWO_FA_DELIVERY_MODE=console
# TWO_FA_DELIVERY_MODE can be: console | email | sms

# Email (if using email delivery)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
SMTP_FROM=2fa@example.com

# SMS (if using SMS delivery)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_FROM_NUMBER=+10000000000
